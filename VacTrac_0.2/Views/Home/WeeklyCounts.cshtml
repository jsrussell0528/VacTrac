@model IEnumerable<VacTrac.Models.WeeklyCounts>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Dictionary<int, string> Vaccines = (Dictionary<int, string>)ViewData["Vaccines"];
}

<h1 class="display-6 text-center">Weekly Counts and Pars</h1>

<div class="row m-3 p-3">
    <p>
        <a class="btn btn-primary" asp-action="CreateWeeklyCount">Add Weekly Count</a>
    </p>
    <table class="table table-striped table-light table-responsive" id="VFCTable">
        <thead>
            <tr>
            <th>
                Vaccine
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccuVaxCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FridgeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dispensed)
            </th>
            <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Vaccines[item.VaccinesID]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccuVaxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FridgeCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dispensed)
                </td>
                <td>
                    <a asp-action="EditWeeklyCount" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="DetailsWeeklyCount" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="DeleteWeeklyCount" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
