@model IEnumerable<VacTrac.Models.Vaccines>

@{
    ViewData["Title"] = "Vaccines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1 class="display-4">Vaccines</h1>

    <p>
        <a class="btn btn-primary" asp-action="CreateVaccine">Create New</a>
    </p>

    <table class="table table-striped table-light table-responsive">
        <thead>
            <tr>
                <th>
                    Vaccine Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Monthly PAR
                </th>
                <th>
                    Weekly PAR
                </th>
                <th>
                    VFC or Private?
                </th>
                @*<th>
                    Inventory
                </th>*@
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VaccineName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonthlyPAR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WeeklyPAR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Private)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.InventoryAccuvax) / @Html.DisplayFor(modelItem => item.InventoryFridge)
                    </td>*@
                    <td class="col-3">
                        <a class="btn btn-success" asp-action="EditVaccine" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-secondary" asp-action="VaccineDetails" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-danger" asp-action="DeleteVaccine" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
